<!DOCTYPE html>
<%- include('header') %>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Thêm sản phẩm mới</h1>
        <form action="/products/add" method="POST">
            <div class="form-group">
                <label for="TENSP">Tên sản phẩm:</label>
                <input type="text" class="form-control" id="TENSP" name="TENSP" required>
            </div>
            <div class="form-group">
                <label for="DVT">Đơn vị tính:</label>
                <input type="text" class="form-control" id="DVT" name="DVT">
            </div>
            <div class="form-group">
                <label for="NUOCSX">Nước sản xuất:</label>
                <input type="text" class="form-control" id="NUOCSX" name="NUOCSX">
            </div>
            <div class="form-group">
                <label for="GIA">Giá:</label>
                <input type="number" class="form-control" id="GIA" name="GIA" required>
            </div>
            <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
            <a href="/products/all" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
<%- include('footer') %>

