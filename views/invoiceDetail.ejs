<h2>Invoice Items</h2>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        <% invoice.invoiceDetails.forEach(detail => { %>
            <tr>
                <td><%= detail.product.TENSP %></td>
                <td><%= detail.SL %></td>
                <td><%= detail.product.DVT %></td>
                <td><%= detail.product.GIA %> VNĐ</td>
                <td><%= detail.product.GIA * detail.SL %> VNĐ</td>
            </tr>
        <% }); %>
    </tbody>
</table>
