<%- include('header') %>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Chỉnh Sửa Nhân Viên</h1>
        <form action="/employees/edit/<%= employee.MANV %>" method="POST">
            <div class="form-group">
                <label for="HOTEN">Họ Tên:</label>
                <input type="text" id="HOTEN" name="HOTEN" class="form-control" value="<%= employee.HOTEN %>" required>
            </div>
        
            <div class="form-group">
                <label for="SODT">Số Điện Thoại:</label>
                <input type="text" id="SODT" name="SODT" class="form-control" value="<%= employee.SODT %>">
            </div>
            <button type="submit" class="btn btn-primary">Cập Nhật Nhân Viên</button>
        </form>
        
        <a href="/employee" class="btn btn-secondary mt-3">Quay Lại</a>
    </div>
<%- include('footer') %>
