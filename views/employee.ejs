<%- include('header') %>
<div class="container mt-5">
    <h1 class="text-center mb-4">Danh sách nhân viên</h1>
    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Họ Tên</th>
                <th>Địa Chỉ</th>
                <th>Số Điện Thoại</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% employees.forEach(employee => { %>
                <tr>
                    <td><%= employee.MANV %></td>
                    <td><%= employee.HOTEN %></td>
                    <td><%= employee.DCHI %></td>
                    <td><%= employee.SODT %></td>
                    <td>
                        <a href="/employees/edit/<%= employee.MANV %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/employees/delete/<%= employee.MANV %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    
    <h1 class="mt-5">Thêm Nhân Viên</h1>
    <form action="/employee" method="POST">
        <div class="form-group">
            <label for="HOTEN">Họ Tên:</label>
            <input type="text" id="HOTEN" name="HOTEN" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="DCHI">Địa Chỉ:</label>
            <input type="text" id="DCHI" name="DCHI" class="form-control">
        </div>
        <div class="form-group">
            <label for="SODT">Số Điện Thoại:</label>
            <input type="text" id="SODT" name="SODT" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Thêm nhân viên</button>
    </form>
</div>
<%- include('footer') %>

