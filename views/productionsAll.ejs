<%- include('header') %>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Danh sách sản phẩm</h1>

        <a href="/products/add" class="btn btn-primary mb-3">Thêm sản phẩm mới</a>

        <table class="table table-bordered table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Mã SP</th>
                    <th>Tên SP</th>
                    <th>Đơn vị tính</th>
                    <th>Nước sản xuất</th>
                    <th>Giá</th>
                    <th>Khu Vực</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.MASP %></td>
                        <td><%= product.TENSP %></td>
                        <td><%= product.DVT %></td>
                        <td><%= product.NUOCSX %></td>
                        <td><%= product.GIA.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></td>
                        <td><%= product.region ? product.region.TEN_KV : 'N/A' %></td>
                        <td>
                            <a href="/products/edit/<%= product.MASP %>" class="btn btn-warning btn-sm">Edit</a>
                            
                            <form action="/products/delete/<%= product.MASP %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<%- include('header') %>
